{% extends "base.twig" %}

{% block title %}Log in{% endblock %}

{% block body %}

    <h1>Log in</h1>

    <form method="post" action="/login/create">
        <div>
            <label for="inputEmail">Email address</label>
            <input type="email" id="inputEmail" name="email" placeholder="Email address" value="{{ email }}" required
                   autofocus>
        </div>
        <div>
            <label for="inputPassword">Password</label>
            <input type="password" id="inputPassword" name="password" placeholder="Password" required>
        </div>
        <div>
            <label>
                <input type="checkbox"
                       name="remember_me"
                        {% if remember_me %} checked="checked"{% endif %}
                />
                Remember me
            </label>
        </div>

        <button type="submit">Log in</button>
    </form>

{% endblock %}